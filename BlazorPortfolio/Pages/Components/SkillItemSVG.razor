

<div class="parent-chart">
    <div id="cont" data-procent="@Data.Procent">
        <svg id="svg" width="100" height="100" viewPort="0 0 100 100" version="1.1" xmlns="http://www.w3.org/2000/svg">
            <circle r="@r" cx="@cx" cy="@cy" fill="transparent" stroke-dasharray="@dasharray" 
            stroke-dashoffset="0"
                    transform="rotate(-90 50 50)">
            </circle>
            <circle class="bar" data-procent="@Data.Procent" r="@r" cx="@cx" cy="@cy" 
                fill="transparent" stroke-dasharray="@dasharray"
                    stroke-dashoffset="0" 
            transform="rotate(-90 50 50)">
            </circle>
        </svg>
    </div>
    <div style="color:var(--third-color)">@Data.Text</div>
</div>

@code {
    [Parameter]
    public Skill Data { get; set; } = new Skill();

    [Parameter]
    public bool Transitions { get; set; }

    private int r = 45;
    private int cx = 50;
    private int cy = 50;
    private double dasharray = 282.6;


}
